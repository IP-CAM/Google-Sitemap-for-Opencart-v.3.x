{{ header }}
{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<div class="input-group">
					<div class="input-group-addon">
						{{ entry_active_store }}
						<select name="store" id="input-store" class="form-select">
							{% for store in stores %}&nbsp;&nbsp;
							<option value="{{ store.href }}" {% if store.store_id == store_id %} selected{% endif %}>{{ store.name }}</option>
							{% endfor %}
						</select>
					</div>
					<button type="submit" form="form-feed" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
					<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
				</div>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-feed" class="form-horizontal">

          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
            <li><a href="#tab-support" data-toggle="tab">{{ tab_help_and_support }}</a></li>
          </ul>

          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">

							<fieldset>
								<legend>{{ heading_product }}</legend>

								<div class="form-group">
									<label for="input-product" class="col-sm-2 control-label">{{ entry_product }}</label>
									<div class="col-sm-10">
										<select name="feed_ps_google_sitemap_product" id="input-product" class="form-control">
											{% if feed_ps_google_sitemap_product %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
											{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
											{% endif %}
										</select>
									</div>
								</div>

								<div class="form-group">
									<label for="input-product-images" class="col-sm-2 control-label">{{ entry_product_images }}</label>
									<div class="col-sm-10">
										<select name="feed_ps_google_sitemap_product_images" id="input-product-images" class="form-control">
											{% if feed_ps_google_sitemap_product_images %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
											{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
											{% endif %}
										</select>
									</div>
								</div>

								<div id="max-product-images-group" class="form-group required"{% if not feed_ps_google_sitemap_product_images %} style="display: none;"{% endif %}>
									<label for="input-max-product-images" class="col-sm-2 control-label">{{ entry_max_product_images }}</label>
									<div class="col-sm-10">
										<input type="text" name="feed_ps_google_sitemap_max_product_images" value="{{ feed_ps_google_sitemap_max_product_images }}" placeholder="{{ entry_fee }}" id="input-max-product-images" class="form-control">
										{% if error_input_max_product_images %}<div class="text-danger">{{ error_input_max_product_images }}</div>{% endif %}
										<div class="help-block text-muted">{{ help_product_images }}</div>
									</div>
								</div>

							</fieldset>
							<fieldset>
								<legend>{{ heading_category }}</legend>

								<div class="form-group">
									<label for="input-category" class="col-sm-2 control-label">{{ entry_category }}</label>
									<div class="col-sm-10">
										<select name="feed_ps_google_sitemap_category" id="input-category" class="form-control">
											{% if feed_ps_google_sitemap_category %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
											{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
											{% endif %}
										</select>
									</div>
								</div>

								<div class="form-group">
									<label for="input-category-images" class="col-sm-2 control-label">{{ entry_category_images }}</label>
									<div class="col-sm-10">
										<select name="feed_ps_google_sitemap_category_images" id="input-category-images" class="form-control">
											{% if feed_ps_google_sitemap_category_images %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
											{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
											{% endif %}
										</select>
									</div>
								</div>

							</fieldset>
							<fieldset>
								<legend>{{ heading_manufacturer }}</legend>

								<div class="form-group">
									<label for="input-manufacturer" class="col-sm-2 control-label">{{ entry_manufacturer }}</label>
									<div class="col-sm-10">
										<select name="feed_ps_google_sitemap_manufacturer" id="input-manufacturer" class="form-control">
											{% if feed_ps_google_sitemap_manufacturer %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
											{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
											{% endif %}
										</select>
									</div>
								</div>

								<div class="form-group">
									<label for="input-manufacturer-images" class="col-sm-2 control-label">{{ entry_manufacturer_images }}</label>
									<div class="col-sm-10">
										<select name="feed_ps_google_sitemap_manufacturer_images" id="input-manufacturer-images" class="form-control">
											{% if feed_ps_google_sitemap_manufacturer_images %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
											{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
											{% endif %}
										</select>
									</div>
								</div>

							</fieldset>
							<fieldset>
								<legend>{{ heading_information }}</legend>

								<div class="form-group">
									<label for="input-information" class="col-sm-2 control-label">{{ entry_information }}</label>
									<div class="col-sm-10">
										<select name="feed_ps_google_sitemap_information" id="input-information" class="form-control">
											{% if feed_ps_google_sitemap_information %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
											{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
											{% endif %}
										</select>
									</div>
								</div>

							</fieldset>

							<hr>

							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-data-feed">{{ entry_data_feed_url }}</label>
								<div class="col-sm-10">
									{% for language in languages %}
									<div class="input-group">
										<span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}"></span>
										<input type="text" name="data_feed_{{ language.language_id }}" value="{{ data_feed_urls[language.language_id] }}" id="input-data-feed-{{ language.language_id }}" class="form-control" readonly>
										<span class="input-group-btn">
											<button type="button" class="btn btn-success btn-copy" data-toggle="tooltip" data-input-id="input-data-feed-{{ language.language_id }}" title="{{ help_copy }}"><i class="fa fa-copy"></i></button>
										</span>
									</div>
									{% endfor %}
								</div>
							</div>

							<div class="form-group">
								<label for="input-status" class="col-sm-2 control-label">{{ entry_status }}</label>
								<div class="col-sm-10">
									<select name="feed_ps_google_sitemap_status" id="input-status" class="form-control">
										{% if feed_ps_google_sitemap_status %}
										<option value="1" selected="selected">{{ text_enabled }}</option>
										<option value="0">{{ text_disabled }}</option>
										{% else %}
										<option value="1">{{ text_enabled }}</option>
										<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>

            </div>
            <div class="tab-pane" id="tab-support">

							<h3>{{ heading_getting_started }}</h3>
							{{ text_getting_started }}
							<hr>
							<h3>{{ heading_setup }}</h3>
							{{ text_setup }}
							<hr>
							<h3>{{ heading_troubleshot }}</h3>
							{{ text_troubleshot }}
							<hr>
							<h3>{{ heading_faq }}</h3>
							{{ text_faq }}
							<hr>
							<h3>{{ heading_contact }}</h3>
							{{ text_contact }}

            </div>
					</div>

					<input type="hidden" name="store_id" value="{{ store_id }}">
        </form>
      </div>
    </div>
  </div>
	<script>
		$('#input-store').on('change', function () {
			window.location = $(this).val();
		});

		$('#input-product-images').on('change', function () {
			if ($(this).prop('selectedIndex')) {
				$('#max-product-images-group').fadeOut();
			} else {
				$('#max-product-images-group').fadeIn();
			}
		});

    $('.btn-copy').on('click', function () {
			var copyText = $("#" + $(this).data('inputId'));

			if (copyText.length) {
					copyText.select();
					copyText[0].setSelectionRange(0, 99999);
					document.execCommand("copy");
			}
		});
	</script>
</div>
{{ footer }}
